{
  "name": "binary-converter",
  "version": "1.0.4",
  "description": "A simple utility to convert text and numbers to binary code.",
  "main": "main.js",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0",
    "yarn": ">=0.27.x"
  },
  "scripts": {
    "clean": "rm -r ./dist/*",
    "build": "cross-env NODE_ENV=production babel ./src --out-dir ./dist --source-maps --copy-files",
    "start:cli": "cross-env NODE_ENV=development node ./src/cli.js",
    "start:web": "cross-env NODE_ENV=development gulp dev",
    "test": "cross-env NODE_ENV=test eslint ./src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexdevero/binary-converter.git"
  },
  "keywords": [
    "alphabet",
    "binary",
    "converter",
    "language",
    "text",
    "numbers",
    "javascript",
    "open",
    "open-source",
    "source"
  ],
  "author": "Alex Devero <deveroalex@gmail.com> (http://github.com/alexdevero)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexdevero/binary-converter/issues"
  },
  "homepage": "https://github.com/alexdevero/binary-converter#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.15.0"
  }
}
